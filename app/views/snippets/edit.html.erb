<%= render 'errors' %>

<form id="snippet-form" style="display: block" method="post" action="/users/<%= current_user.id %>/snippets/<%= @snippet.id %>">
	<input type="hidden" name="_method"  value="put">
	<label for="title">title:</label>
	<input id="title" type="text" name="snippet[title]" value="<%= @snippet.title %>">

	<label for="description">description:</label>
	<input id="description" type="text" name="snippet[description]" value="<%= @snippet.description %>">
	<br>
	<br>
	<label for="category">category:</label>
	<select id="category" name="snippet[category]" value="<%= @snippet.category %>">
	  <option value="list">list</option>
	  <option value="form">form</option>
	  <option value="button">button</option>
	  <option value="container">container</option>
	  <option value="navbar">navbar</option>
	</select>

	<div class="textarea">
	<textarea id="html" type="text" name="snippet[html]" placeholder="html"><%= @snippet.title %></textarea>
	<textarea id="css" type="text" name="snippet[css]" placeholder="css"><%= @snippet.title %></textarea>
	</div>
	<input class="create-button" type="submit" value="update snippet">
</form>