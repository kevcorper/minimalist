
<h1>Register</h1>

<%= render 'errors' %>

<%= form_tag(users_path, method: 'post') do %>
  <%= label_tag 'username' %>
  <%= text_field_tag "user[username]" %><br>

  <%= label_tag :email %>
  <%= text_field_tag 'user[email]', nil, placeholder: "email@email.com" %><br>

  <%= label_tag :password %>
  <%= password_field_tag 'user[password]' %><br>
    
<%= submit_tag('Register', :class => "create-button") %>
<% end %>